# Example ----------------------------------------------------------------------
QPushButton {
    padding: 3px;   # font is ubuntu
    color: #333;
    border: 1px solid #555;
    border-radius: 2px;
    background: qradialgradient(cx: 0.3, cy: -0.4,
                                fx: 0.3, fy: -0.4,
                                radius: 1.40, stop: 0 #fff, stop: 1 #888);
    min-width: 80px;
}

QPushButton:hover {
    background: qradialgradient(cx: 0.3, cy: -0.4,
                                fx: 0.3, fy: -0.4,
                                radius: 1.40, stop: 0 #fff, stop: 1 #bbb);
}

QPushButton:pressed {
    background: qradialgradient(cx: 0.4, cy: -0.1,
                                fx: 0.4, fy: -0.1,
                                radius: 1.40, stop: 0 #fff, stop: 1 #ddd);
}


