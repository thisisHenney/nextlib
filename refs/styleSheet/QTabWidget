# Setting ----------------------------------------------------------------------
self._ui.tabWidget.tabBar().setExpanding(True)
useScrollButtons: False


# Set defaults -----------------------------------------------------------------
QTabWidget::tab-bar {
    left: 6px;
}
QTabBar::tab {
	min-width: 100;  /* 글자 크기에 따라 변경 */
	min-height: 30; /* 탭바 높이 */
}
QTabBar::tab:hover:!selected{
	border: 1px solid #bbbbbb;
	border-radius: 2px;
	border-bottom-color: #bbbbbb;
	background-color: #eeeeee;
    margin-top: 2px;
	margin-bottom: 2px;
}
