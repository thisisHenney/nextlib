
defaults color: #eeeeee

# Set Defaults -----------------------------------------------------------------
QPushButton {
    padding: 3px;   # font is ubuntu
    color: #000000;
    border: 1px solid #a0a0a0;
	border-radius: 3px;
    background: qlineargradient(x1: 0, y1: 0, x2: 1, y2: 1,
                                stop: 0 #fcfcfc, stop: 1 #eeeeee);
}

QPushButton::disabled {
	color: #aaaaaa;     /* font color */
    border-radius: 3px;
	background-color: #dddddd;
}

QPushButton::hover {
    border: 1px solid darkgray;
    border-radius: 3px;
	background-color: #f9f9f9;
}

QPushButton::pressed {
	background-color: #dddddd;
/*    background-color: rgba(100, 100, 100, 65);*/
}

# Custom1 (Orange) -------------------------------------------------------------
QPushButton {
    padding: 3px;   # font is ubuntu
    color: #000000;
    border: 1px solid #a0a0a0;
	border-radius: 3px;
    background: qlineargradient(x1: 0, y1: 0, x2: 1, y2: 1,
                                stop: 0 #fcfcfc, stop: 1 #eeeeee);
}

QPushButton::hover {
	border: 1px solid darkorange;
    border-radius: 3px;
    background: qlineargradient(x1: 0, y1: 0, x2: 1, y2: 1,
                                stop: 0 #ffe5b5, stop: 1 #fcbe4c);
}

QPushButton::pressed {
	border: 1px solid orange;
    border-radius: 3px;
    background: qlineargradient(x1: 0, y1: 0, x2: 1, y2: 1,
                                stop: 0 #fcbe4c, stop: 1 #ffe5b5);
   /* or >> background-color: darkorange; */
}



