    left: 6px;
}
QTabBar::tab {
    min-width: 100;
	min-height: 30;
}

QTabBar::tab:hover:selected{
	border: 1px solid darkorange;
	border-bottom: none;
	border-radius: 2px;
	background: qlineargradient(x1: 0, y1: 0, x2: 1, y2: 1, stop: 0 #FFE5B5, stop: 1 #FCBE4C);
	margin-bottom: 2px;
}

